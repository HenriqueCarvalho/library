<h1>Items</h1>

<p><%= link_to 'New item', new_item_path %></p>

<% @items.each do |item| %>
	<p>
		<%= item.title %>
	</p>
	<p>
		<%= item.item_type.name %> 
	</p>
	<p>
		<%= image_tag(item.image_url) %>
	</p>
	<p>
		<% if !item.completed? %>    
			 Item is completed.
	  	<% end %>
	</p>
	<p>
		<%= link_to 'Edit', edit_item_path(item) %>
		*
		<%= link_to 'Delete', item_path(item), method: :delete %>
	</p>
<% end %>